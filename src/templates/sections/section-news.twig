{#
title: Basic section
#}

{% embed "@templates/layouts/section.twig" %}

{% set news = site.data['news.json'].news %}

{% block header %}
<h3 class="section-title">In the news</h3>
{% endblock %}

{% block content %}
<div class="news-content">
  {% for article in news %}
    <div class="news-content-block">
      <div class="content-block-inner">
        {% include '@templates/partials/news-article.html' with {article} %}
      </div>
    </div>
  {% endfor %}
</div>
{% endblock %}

{% endembed %}